<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projet.MenuActivity"
    tools:ignore="MergeRootFrame"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="#0098ff">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/hello_world"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hello"
                android:layout_gravity="left|top"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choisi ton activitÃ©"
            android:id="@+id/titre"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/math"
            android:src="@drawable/math"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/francais"
            android:layout_margin="10dp"
            android:id="@+id/francais" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/histoire"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/histoire"
            android:layout_margin="10dp"
            android:longClickable="true" />

    </LinearLayout>

</FrameLayout>